# Grid Inference Worker configuration
# Copy to .env and fill in your values

# --- Required ---
GRID_API_KEY=your-api-key-here
MODEL_NAME=llama3.2:3b

# --- Grid settings ---
GRID_WORKER_NAME=Text-Inference-Worker
GRID_API_URL=https://api.aipowergrid.io/api
GRID_NSFW=true
GRID_MAX_THREADS=1
GRID_MAX_LENGTH=512
GRID_MAX_CONTEXT_LENGTH=4096

# --- Backend (ollama or openai) ---
BACKEND_TYPE=ollama
OLLAMA_URL=http://127.0.0.1:11434

# --- Advanced: OpenAI-compatible backend ---
# BACKEND_TYPE=openai
# OPENAI_URL=http://127.0.0.1:8000/v1
# OPENAI_API_KEY=

# --- Optional: override the grid model name ---
# GRID_MODEL_NAME=gridbridge/llama3.2:3b
